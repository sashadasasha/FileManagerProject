<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="org.alekskorn.manager.file.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" stylesheets="style.css">
    <HBox>
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#menuItemFileExitAction"/>
        </Menu>
    </MenuBar>
    <TextField editable="false" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    </HBox>
    <ListView VBox.vgrow="ALWAYS" fx:id="filesList"/>
    <HBox>
        <Button text="View" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
        <Button text="Edit" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
        <Button text="Move" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
        <Button text="Delete" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
    </HBox>
</VBox>